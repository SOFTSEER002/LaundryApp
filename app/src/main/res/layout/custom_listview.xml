<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="2">

    <ImageView

        android:id="@+id/imageview"
        android:layout_width="00dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/clothes" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tshirts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-shirts/Shirts" />

                <TextView
                    android:id="@+id/jeans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeans/Lower" />


                <TextView
                    android:id="@+id/bedsheets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedsheets" />

                <TextView
                    android:id="@+id/towel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Towels" />

                <TextView
                    android:id="@+id/wash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wash" />

                <TextView
                    android:id="@+id/iron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iron" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tshirtsqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/jeansqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />


                <TextView
                    android:id="@+id/bedsheetsqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/towelqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/washqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/ironqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Cart Total"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>